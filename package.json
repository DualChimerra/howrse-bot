{
  "name": "howrse-bot-electron",
  "productName": "HowrseBot",
  "version": "0.1.0",
  "private": true,
  "description": "Electron + React + TypeScript port of BotQually (Howrse bot).",
  "author": "",
  "license": "MIT",
  "main": "electron/main.ts",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build && electron-builder --mac --x64 --arm64",
    "start": "electron-vite preview"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@floating-ui/react": "^0.26.19",
    "class-variance-authority": "^0.7.0",
    "got": "^13.0.0",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.4",
    "i18next": "^23.10.1",
    "linkedom": "^0.16.10",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.2",
    "react-router-dom": "^6.26.1",
    "tough-cookie": "^4.1.4",
    "xml2js": "^0.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/tough-cookie": "^4.0.5",
    "@types/xml2js": "^0.4.14",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.6"
  },
  "build": {
    "appId": "com.howrse.bot",
    "files": [
      "dist/**",
      "electron/**",
      "src/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
