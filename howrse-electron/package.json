{
  "name": "howrse-electron",
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:start\"",
    "dev:renderer": "vite --config renderer/vite.config.ts",
    "dev:main": "tsup electron/main.ts electron/preload.ts --format cjs --out-dir dist-electron --watch",
    "start": "wait-on tcp:5173 dist-electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build:renderer": "vite build --config renderer/vite.config.ts",
    "build:main": "tsup electron/main.ts electron/preload.ts --format cjs --out-dir dist-electron",
    "build": "npm run build:renderer && npm run build:main && electron-builder --mac --arm64 --x64",
    "lint": "echo skip"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "type": "module",
  "build": {
    "appId": "com.howrse.bot",
    "productName": "Howrse Bot",
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "extraResources": [
      {
        "from": "settings",
        "to": "settings"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.utilities"
    },
    "afterPack": "node ./scripts/afterPack.cjs"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "axios-cookiejar-support": "^6.0.4",
    "cheerio": "^1.1.2",
    "electron": "^37.2.6",
    "fast-xml-parser": "^5.2.5",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "nprogress": "^0.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socks-proxy-agent": "^8.0.5",
    "tough-cookie": "^5.1.2",
    "zod": "^4.0.16",
    "zustand": "^5.0.7"
  }
}
